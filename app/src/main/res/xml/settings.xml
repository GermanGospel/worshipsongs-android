<?xml version="1.0" encoding="utf-8"?><PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_text_setting" >
        <ListPreference
            android:key="prefSetFont"
            android:entries="@array/setFont"
            android:summary="@string/pref_sync_frequency_summary"
            android:defaultValue="NORMAL"
            android:entryValues="@array/setFontValues"
            android:title="@string/pref_change_font_size" />
        <ListPreference
            android:key="prefSetFontStyle"
            android:entries="@array/setFontStyle"
            android:summary="@string/pref_text_style_summary"
            android:defaultValue="NORMAL"
            android:entryValues="@array/setFontStyleValues"
            android:title="@string/pref_change_font_style" />
        <ListPreference
            android:key="prefSetFontFace"
            android:entries="@array/setFontFaceStyle"
            android:summary="@string/pref_font_face_summary"
            android:defaultValue="DEFAULT"
            android:entryValues="@array/setFontFaceValues"
            android:title="@string/pref_change_font_face" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_color_settings" >
        <org.worshipsongs.picker.ColorPickerPreference
            android:key="primaryColor"
            android:title="@string/primary_color"
            android:summary="@string/primary_summary"
            android:defaultValue="@integer/COLOR_DARK_GRAY"/>

        <org.worshipsongs.picker.ColorPickerPreference
            android:key="secondaryColor"
            android:title="@string/secondary_color"
            android:summary="@string/secondary_summary"
            android:defaultValue="@integer/COLOR_RED"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_screen_settings" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefKeepAwakeOn"
            android:summary="To keep the screen awake"
            android:title="@string/pref_keep_awake_on" >
        </CheckBoxPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_update_interval_setting" >
        <ListPreference
            android:key="databaseUpdateInterval"
            android:entries="@array/databaseUpdateIntervalKey"
            android:summary="@string/pre_update_interval_setting_summary"
            android:defaultValue="MONTHLY"
            android:entryValues="@array/databaseUpdateIntervalValue"
            android:title="@string/pref_update_interval_setting_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_restore_default_settings" >
        <org.worshipsongs.service.ResetDefaultSettingsService
            android:dialogMessage="Revert all values to their defaults?"
            android:key="resetDialog"
            android:negativeButtonText="No, KEEP current values"
            android:persistent="false"
            android:positiveButtonText="Yes, RESET all values"
            android:summary="Reset all settings to their initial values."
            android:title="Reset to default" >
        </org.worshipsongs.service.ResetDefaultSettingsService>
    </PreferenceCategory>

</PreferenceScreen>