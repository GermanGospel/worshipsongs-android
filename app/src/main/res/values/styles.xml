<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColor">@color/background_material_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialAppTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="singleAccount">true</item>
        <item name="android:textColor">@color/background_material_dark</item>

    </style>

    <style name="PreferenceListHeader">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#cccccc</item>
        <item name="android:paddingTop">6px</item>
        <item name="android:paddingBottom">6px</item>
        <item name="android:paddingLeft">12px</item>
    </style>

    <style name="Theme.CustomPreferenceSetting" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="colorPrimary">@color/light_navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
    </style>
</resources>
